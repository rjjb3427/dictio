<div class="col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3 col-xl-4 col-xl-offset-4">
  <h3 class="red-text"><%= t(".title") %></h3>

  <p class="lead"><%= t(".description") %></p>

  <%= form_for :password_reset,
        url: user_password_path(@user, token: @user.confirmation_token),
        html: { method: :put } do |form| %>
    <fieldset class="form-group">
      <%= form.label :password, class: "lead" %>
      <%= form.password_field :password, class: "form-control" %>
    </fieldset>
    <%= form.submit "Submit", class: "btn btn-red" %>
  <% end %>
</div>
