<div class="fixed top-0 left-0 right-0 px3 pb1 bg-blue border-bottom">
  <ul class="list-reset">
    <li class="left h1"><%= link_to "Dictio", root_path, class: "head-font text-decoration-none white align-middle" %></li>
    <li class="right mt1">
      <%= search_field_tag("search", nil, class: "input", placeholder: "Search") %>
    </li>
    <li class="right mr3 mt2">
      <% if signed_in? %>
        <%= current_user.email %> | <%= link_to "Sign out", sign_out_path, method: :delete, class: "text-decoration-none align-bottom" %>
      <% else %>
        <%= link_to "Sign in", sign_in_path %>
      <% end %>
    </li>
  </ul>
</div>
