<%= form_for([@definition.term, @definition]) do |f| %>
  <fieldset class="form-group">
    <%= f.label :meaning, "Definition" %>
    <%= f.text_area :meaning, rows: 6,  placeholder: "Definition", class: "form-control" %>
  </fieldset>
  <%= f.submit 'Submit', class: "btn btn-red" %> <%= link_to 'Cancel', terms_path, class: 'btn btn-cancel'%>
<% end %>
