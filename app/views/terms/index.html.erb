<% for term in @terms do %>
  <section>
    <h2 class="h1"><%= term.name %> <span class="h5"><%= link_to 'Edit', edit_term_path(term) %> | <%= link_to 'Delete', term, method: :delete, data: {confirm: 'Are you sure?'} %></span></h2>
    <% for definition in term.definitions do %>
      <p><%= definition.meaning %></p>
    <% end %>
  </section>
<% end %>
<%= link_to 'Submit a New Term', new_term_path %>
