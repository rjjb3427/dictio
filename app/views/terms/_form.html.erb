<%= form_for(@term) do |f| %>
  <fieldset class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </fieldset>
  <%= f.fields_for :definitions do |d| %>
    <fieldset class="form-group">
      <%= d.label :meaning, "Definition" %><br>
      <%= d.text_area :meaning, rows: 6, class: "form-control" %>
    </fieldset>
  <% end %>
  <%= f.submit 'Submit', class: "btn" %>
<% end %>
