<%= form_for(@term) do |f| %>
  <fieldset class="form-group">
    <%= f.label :name, "Term" %><br>
    <%= f.text_field :name, placeholder: "Term name", class: "form-control" %>
  </fieldset>
  <%= f.fields_for :definitions do |d| %>
    <fieldset class="form-group">
      <%= d.label :meaning, "Definition" %><br>
      <%= d.text_area :meaning, rows: 6,  placeholder: "Definition", class: "form-control" %>
    </fieldset>
  <% end %>
  <%= f.submit 'Submit', class: "btn btn-red" %> <%= link_to 'Cancel', terms_path, class: 'btn btn-white' %>
<% end %>
  