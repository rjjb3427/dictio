<% provide(:title, "New Term") %>
<div class="col-lg-8 col-lg-offset-2">
  <h3>Submit a New Term</h3>

  <% if signed_in? %>
    <%= render 'form' %>
    <%= link_to 'Cancel', terms_path %>
  <% else %>
    <p>Please create an account to submit a term or <%= link_to 'Sign In', sign_in_path %>.</p>
  <% end %>
</div>
