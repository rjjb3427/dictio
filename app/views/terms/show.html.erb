<% provide(:title, @term.name) %>
<h1 class="red-text text-xs-center"><%= @term.name %></h1>
<div class="col-xl-4 col-xl-offset-4">
<ol>
  <% for definition in @term.definitions %>
    <li class="lead"><p><%= definition.meaning %></p></li>

    <%
      # You can't vote if it is your definition,
      # you are not logged in,
      # or you have already voted on this item

      unless definition.user_id == current_user.id ||
      !signed_in? ||
      current_user.voted_on?(definition)
    %>

    <%= link_to "Up", url: vote_up_term_definition_path(definition.term, definition), method: :post, remote: true %>
    /
    <%= link_to "Down", url: vote_down_term_definition_path(definition.term, definition), method: :post, remote: true %>

    <% end %>

    Votes: <%= definition.votes_for - definition.votes_against %>

  <% end %>
</ol>

<h5 class="text-xs-center"><%= link_to "Add a New Definition", new_term_definition_path(@term) %></h5>
</div>
