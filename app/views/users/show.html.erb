<div class="container-fluid">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4 ">
            <h1 class="red-text text-xs-center"><%= current_user.username %></h1>
        </div>

        <div class="col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4 ">
            <div class="row">
            <ul class="list-group">
              <li class="list-group-item">
                Terms submitted
                <span class="label label-aqua label-pill pull-xs-right"><%= @totalTerms %></span>
                </li>
              <li class="list-group-item">
                Definitions submitted
                <span class="label label-aqua label-pill pull-xs-right"><%= @totalDefinitions %></span>
                </li>
              <li class="list-group-item">
                Joined
                <span class="label label-aqua label-pill pull-xs-right"><%= time_ago_in_words(current_user.created_at) %></span>
              </li>
              <li class="list-group-item">
                <%= link_to "Reset Password", resetpassword_path %>
              </li>
            </ul>
        </div>
    </div>
</div>
