<div class="container-fluid">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4 ">
            <h1 class="red-text text-xs-center"><%= current_user.username %></h1>
        </div>
                            
        <div class="col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4 ">            
            <div class="row">
            <ul class="list-group">
              <li class="list-group-item">
                <span class="label label-default label-pill pull-xs-right"><%= @totalTerms %></span>
                    Terms submitted
                </li>
              <li class="list-group-item">
                <span class="label label-default label-pill pull-xs-right"></span>
                    Definitions submitted 
                </li>
                
              <li class="list-group-item">
                  <span class="label label-default label-pill pull-xs-right"><%= time_ago_in_words(current_user.created_at) %></span>
                  Joined 
              <li class="list-group-item">
                 <%= link_to "Reset Password", passwords_path(password: {email: current_user.email}), :method => :post %>        
              </li>
            </ul>
        </div>
    </div>
</div>
        